{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "pretty": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmitHelpers": false,
    "importHelpers": false,
    "esModuleInterop": true,
    "target": "ES2020",
    "noEmit": true,
    "lib": [
      "ES2017",
      "dom"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}
